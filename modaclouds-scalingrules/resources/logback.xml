<configuration>
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />

	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <!-- reset all previous level configurations of all j.u.l. loggers -->
		<resetJUL>true</resetJUL>
	</contextListener>

	<evaluator name="DISP_CALLER_EVAL">
		<expression>level >= WARN</expression>
	</evaluator>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>
                    level >= WARN
                </expression>
            </evaluator>
            <OnMismatch>NEUTRAL</OnMismatch>
            <OnMatch>DENY</OnMatch>
        </filter>
		<target>System.out</target>
		<encoder>
			<pattern>%d{HH:mm:ss} [ScalingRules] %m%n
			</pattern>
		</encoder>
	</appender>

	<appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">
			<evaluator>
				<expression>
					level >= WARN
				</expression>
			</evaluator>
			<OnMismatch>DENY</OnMismatch>
			<OnMatch>NEUTRAL</OnMatch>
		</filter>
		<target>System.err</target>
		<encoder>
			<pattern>%d{HH:mm:ss} [ScalingRules] %m%n%caller{5}
			</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>debug.%d{yyyy-MM-dd}.log</fileNamePattern>
      		<!-- keep 3 days' worth of history -->
			<maxHistory>3</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%caller{5, DISP_CALLER_EVAL}
			</pattern>
		</encoder>
	</appender>

	<logger name="it.polimi" level="TRACE" />

	<logger name="org.cloudml" level="TRACE" />

	<logger name="it.cloud" level="TRACE" />

	<logger name="com.amazonaws" level="WARN" />

	<logger name="org.apache" level="WARN" />

	<logger name="javax.management" level="WARN" />

	<logger name="org.cloudml.facade.util.WSClient" level="TRACE" />

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="STDERR" />
	</root>

	<root level="TRACE">
		<appender-ref ref="FILE" />
	</root>
</configuration>